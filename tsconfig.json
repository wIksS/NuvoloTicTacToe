{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "tables": ["types/tables"],
      "script-includes/*": ["src/sys_script_include/*"],
      "types": ["types"]
    }
  },
  "include": ["src/**/*"]
}
